/* =========================================================
   CV CANADA — IMMIGRATION97
   Format ATS + Recruteurs + Immigration
   COMPATIBLE XHTML2PDF (PRODUCTION SAFE)
========================================================= */

/* -------------------------
   BASE
-------------------------- */
.pdf.pdf-cv-canada {
  font-family: Arial, Helvetica, sans-serif;
  font-size: 10.8pt;
  line-height: 1.45;
  color: #111;
}

/* -------------------------
   HEADER
-------------------------- */
.pdf.pdf-cv-canada .header {
  text-align: center;
  padding-bottom: 10px;
  margin-bottom: 16px;
  border-bottom: 2px solid #000;
}

.pdf.pdf-cv-canada .name {
  font-size: 22pt;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.pdf.pdf-cv-canada .job-title {
  font-size: 12pt;
  margin-top: 4px;
}

.pdf.pdf-cv-canada .meta {
  font-size: 9.5pt;
  margin-top: 6px;
  color: #333;
}

/* -------------------------
   SECTIONS
-------------------------- */
.pdf.pdf-cv-canada .section {
  margin-bottom: 14px;
}

.pdf.pdf-cv-canada .section-title {
  font-size: 11.5pt;
  font-weight: bold;
  text-transform: uppercase;
  margin-bottom: 6px;
  border-bottom: 1px solid #000;
  padding-bottom: 2px;
}

/* -------------------------
   ITEMS (Experience / Education)
-------------------------- */
.pdf.pdf-cv-canada .item {
  margin-bottom: 8px;
}

.pdf.pdf-cv-canada .item-title {
  font-weight: bold;
  font-size: 10.8pt;
}

.pdf.pdf-cv-canada .muted {
  font-size: 9.5pt;
  color: #444;
  margin-bottom: 2px;
}

/* -------------------------
   LISTES (ATS SAFE — CRITIQUE)
-------------------------- */
.pdf.pdf-cv-canada ul {
  margin: 4px 0 6px 16px;
  padding: 0;
  list-style-type: disc;
}

.pdf.pdf-cv-canada ul li {
  margin-bottom: 3px;
}

/* -------------------------
   SKILLS & LANGUAGES
-------------------------- */
.pdf.pdf-cv-canada .skills-list {
  margin: 4px 0 0 16px;
  padding: 0;
  list-style-type: square;
}

.pdf.pdf-cv-canada .skills-list li {
  margin-bottom: 3px;
}

/* -------------------------
   PARAGRAPHS
-------------------------- */
.pdf.pdf-cv-canada p {
  margin: 2px 0 4px 0;
}

/* -------------------------
   PAGE BREAK CONTROL
-------------------------- */
.pdf.pdf-cv-canada .section,
.pdf.pdf-cv-canada .item {
  page-break-inside: avoid;
}

@page {
  size: A4;
  margin: 15mm;
}

* {
  box-sizing: border-box;
}

.pdf {
  font-family: "Poppins", "Segoe UI", Arial, sans-serif;
  font-size: 11pt;
  line-height: 1.5;
  color: #222;
  background: #fff;
}

.pdf h1,
.pdf h2,
.pdf h3 {
  margin: 0;
  padding: 0;
}

.pdf p {
  margin: 0 0 6px 0;
}
